{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,               // FIX: Enables strict type checking (recommended)
    "forceConsistentCasingInFileNames": true, // FIX: Ensures correct file casing
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",            // FIX: Allows JSX syntax in .tsx files
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // --- PATH ALIASES (CRITICAL FIX) ---
    "baseUrl": "src",
    "paths": {
      "@/components/*": ["components/*"],
      "@/lib/*": ["lib/*"],
      "@/data/*": ["data/*"]     // FIX: Allows '@/data/colleges' import
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}